@{
    ViewBag.Title = "syndii - Home";
}

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>


    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
    <!-- Google Fonts CSS -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Patua+One" rel="stylesheet">
    <!-- Social Media Icon Library (Font Awesome) -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    <!-- Custom CSS -->
    <link href="@Url.Content("~/css/site.css")" rel="stylesheet" type="text/css" />

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <![endif]-->

    <title>syndii&ndash;onsite insight</title>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js" type="text/javascript"></script>

    <script>
        $(function () {
            var header = $(".navbar");

            $(window).scroll(function () {
                var scroll = $(window).scrollTop();
                if (scroll >= 100) {
                    header.addClass("scrolled");
                } else {
                    header.removeClass("scrolled");
                }
            });

        });
    </script>
</head>

<body data-spy="scroll" data-target=".navbar" data-offset="150">

    @RenderBody()

    <footer class="footer">
        <div class="container">
            <div class="row align-items-center">
                <div class="footer-nav col-lg-5 col-12 order-lg-1 order-2">
                    <ul class="nav flex-lg-row flex-column">
                        <li class="nav-item">
                            <div class="nav-link">@Html.ActionLink("Contact Us", "Contact", "Home")</div>
                        </li>
                        <li class="nav-item">
                            <div class="nav-link">@Html.ActionLink("Privacy Policy", "Privacy", "Home")</div>
                        </li>
                        <li class="nav-item">
                            <div class="nav-link">@Html.ActionLink("Terms of Use", "Terms", "Home")</div>
                        </li>
                    </ul>
                </div>
                <div class="footer-logo col-lg-2 col-12 order-lg-2 order-1">
                    <img src="~/images/syndii-tagline.png" alt="Syndii Logo" class="img-fluid" style="max-width: 150px;" />
                </div>
                <div class="footer-social col-lg-5 col-12 order-lg-3 order-3">
                    <div class="social-media-icons">
                        <ul class="nav justify-content-lg-end justify-content-center">
                            <li class="nav-item"><a href="#" class="fab fa-linkedin"></a></li>
                            <li class="nav-item"><a href="https://twitter.com/getsyndii" class="fab fa-twitter-square"></a></li>
                            <li class="nav-item"><a href="#" class="fab fa-facebook-square"></a></li>
                            <li class="nav-item"><a href="#" class="fab fa-kickstarter"></a></li>
                        </ul>
                    </div>
                    <p>syndii&trade; &copy; @DateTime.Now.Year Opilio Labs Inc.</p>
                </div>
            </div>
        </div>
    </footer>

</body>

</html>