@model SyndiiWWWMVC.Models.Subscriber

@{
    ViewBag.Title = "Resubscribe";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-dark sticky-top">
    <div class="container">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img class="navbar-brand" name="syndiiLogo" alt="syndii logo" src="~/images/syndii-logo.png" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <div class="nav-item nav-link text-uppercase">@Html.ActionLink("HOME", "Index", "Home")</div>
            </div>
        </div>
    </div>
</nav>

<div class="container" style="min-height:70vh;">
    <div class="row">
        <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-10 offset-sm-1 col-12">
            <h2 class="text-center spacer">@ViewData["Title"]</h2>
            <p class="text-center">It looks like your email is already on record.<br/>Please confirm the email below is correct and then click <strong style="color:#3eaddf">resubscribe</strong> to resume receiving emails from syndii&trade;. </p>
        </div>
    </div>
    <div class="row gutter">
        <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-10 offset-sm-1 col-12">
            <form asp-action="Resubscribe">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" readonly />
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" readonly />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Resubscribe" class="btn btn-contact btn-default" />
                </div>
            </form>
            <div class="text-right gutter subscribe">
                <a asp-action="Index">Click to Return</a>
            </div>
        </div>
    </div>
</div>