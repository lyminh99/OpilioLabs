@model SyndiiWWWMVC.Models.Subscriber

@{
    ViewBag.Title = "Unsubscribe";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-dark sticky-top">
    <div class="container"> 
        <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img class="navbar-brand" name="syndiiLogo" alt="syndii logo" src="~/images/syndii-logo.png" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <div class="nav-item nav-link text-uppercase">@Html.ActionLink("HOME", "Index", "Home")</div>
            </div>
        </div>
    </div>
</nav>

<div class="container" style="min-height:70vh;">
    <div class="row">
        <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-10 offset-sm-1 col-12">
            <h2 class="text-center spacer">@ViewData["Title"]</h2>
            <p class="text-center">We are sorry to see you go. Are you sure you want to unsubscribe from our mailing list?</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 offset-lg-2 col-12 subscribe">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>

            <form asp-action="Unsubscribe">
                <input type="hidden" asp-for="ID" />

                <input type="submit" value="Unsubscribe" class="btn btn-contact btn-default" />
            </form>
            <div class="text-right">
                <a asp-action="Index">Click to Return</a>
            </div>
        </div>
    </div>
</div>
